<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.main {
			padding: 20px;
			width: 100%;
			height: 100%;
			background: #E7E9EB;
		}
	</ui:style>

	<g:HTMLPanel styleName="{style.main}">
		<header>
			<g:Button ui:field="createButton">Create Resource</g:Button>
		</header>
		<g:HTMLPanel ui:field="content"></g:HTMLPanel>
	</g:HTMLPanel>

</ui:UiBinder>